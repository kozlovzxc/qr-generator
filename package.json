{
  "name": "qr-generator",
  "workspaces": [
    "apps/app-api"
  ],
  "scripts": {
    "start:api": "yarn --cwd apps/app-api start",
    "start:platforms": "yarn --cwd apps/app-platforms start",
    "lint": "yarn lint:api && yarn lint:platforms",
    "lint:api": "yarn --cwd apps/app-api lint",
    "lint:platforms": "yarn --cwd apps/app-platforms lint",
    "format": "yarn format:api && yarn format:platforms",
    "format:api": "yarn --cwd apps/app-api format",
    "format:platforms": "yarn --cwd apps/app-platforms format"
  },
  "version": "0.0.0",
  "author": "Nikita Kozlov",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "prettier": "^2.1.2"
  }
}
